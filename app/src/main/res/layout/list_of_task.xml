<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/todo"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/to_do" />
    <Button
        android:id="@+id/btnRetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETOUR" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/enretard"
                android:layout_width="100dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/enretard" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="20sp"
                tools:ignore="MissingConstraints"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/listViewLATE"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp" >


                </ListView>
            </LinearLayout>

            <ImageView
                android:id="@+id/afaire"
                android:layout_width="100dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/afaire" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="20sp"
                tools:ignore="MissingConstraints">

                <ListView
                    android:id="@+id/listViewTODO"
                    android:layout_width="wrap_content"
                    android:layout_height="350sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/realise"
                android:layout_width="100dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/realise" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="20sp"
                tools:ignore="MissingConstraints">
            <ListView
                android:id="@+id/listViewFINISH"
                android:layout_width="wrap_content"
                android:layout_height="350sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>